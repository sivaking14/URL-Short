<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>URL Shortener</title>
    <style>
        /* Full-screen centered layout with animated gradient background */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
            overflow: hidden;
            position: relative;
        }

        /* Animated background */
        .background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1f6eed, #ff5a5a);
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
            z-index: 1;
        }

        @keyframes gradientAnimation {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Particles styling */
        #particles-js {
            position: absolute;
            width: 100%;
            height: 100%;
            z-index: 0; /* Behind the background */
        }

        /* Marquee styling */
        .marquee-container {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 3;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            text-align: center;
        }
        .marquee-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: #007bff;
            animation: scrollLeft 10s linear infinite;
            white-space: nowrap;
        }

        @keyframes scrollLeft {
            from { transform: translateX(100%); }
            to { transform: translateX(-100%); }
        }

        /* Overlay text styling */
        .overlay-text {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 4rem;
            color: rgba(255, 255, 255, 0.1);
            text-shadow: 2px 2px 20px rgba(0, 0, 0, 0.8);
            z-index: 2;
            white-space: nowrap;
            overflow: hidden;
            animation: fadeIn 3s ease-in-out infinite;
        }

        @keyframes fadeIn {
            0% { opacity: 0; }
            50% { opacity: 0.5; }
            100% { opacity: 0; }
        }

        /* Container styling */
        .container {
            max-width: 700px;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            z-index: 3; /* Above the background */
            position: relative;
        }

        /* Additional styling */
        h1 { font-size: 2.5rem; color: #007bff; font-weight: bold; margin-bottom: 25px; }
        .form-control, .btn { height: 50px; border-radius: 6px; }
        .btn-success { width: 100%; font-weight: bold; font-size: 1.1rem; }
        .table { margin-top: 30px; }
        .table th, .table td { vertical-align: middle; text-align: center; }
        .qr-code { max-width: 80px; transition: transform 0.3s ease; cursor: pointer; }
        .qr-code:hover { transform: scale(2); z-index: 10; }
        .form-group label { font-weight: bold; color: #495057; }
        .expired { background-color: #f8d7da; color: #721c24; border-radius: 5px; padding: 5px 10px; font-weight: bold; }
        .remaining-time { background-color: #d4edda; color: #155724; border-radius: 5px; padding: 5px 10px; font-weight: bold; }
    </style>
</head>
<body>
    <!-- Scrolling Section -->
    <div class="marquee-container">
        <div class="marquee-text">!!!! Sonicsoft Presents URL Shortener !!!!</div>
    </div>

    <div id="particles-js"></div> <!-- Particles background -->
    <div class="background"></div>
    <div class="overlay-text">Sonicsoft URL Shortener</div>
    <div class="container text-center">
        <h1>URL Shortener</h1>

        <!-- URL Shortening Form -->
        <form action="/shortUrls" method="POST" class="my-4">
            <div class="form-group mb-3">
                <label for="fullUrl">Enter the URL to shorten:</label>
                <input required placeholder="https://example.com" type="url" name="fullUrl" id="fullUrl" class="form-control">
            </div>
            <div class="form-group mb-3">
                <label for="timeFrame">Select Expiration Time:</label>
                <select name="timeFrame" id="timeFrame" class="form-control">
                    <option value="1">1 minute</option>
                    <option value="5">5 minutes</option>
                    <option value="15">15 minutes</option>
                    <option value="30">30 minutes</option>
                    <option value="60">1 hour</option>
                </select>
            </div>
            <button class="btn btn-success" type="submit">Generate Short URL</button>
        </form>

        <!-- Display Existing Short URLs -->
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th scope="col">Full URL</th>
                    <th scope="col">Short URL</th>
                    <th scope="col">Clicks</th>
                    <th scope="col">Remaining Time</th>
                    <th scope="col">QR Code</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %> 
                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %>" target="_blank" class="text-decoration-none">
                                <%= shortUrl.full.length > 30 ? shortUrl.full.substring(0, 30) + "..." : shortUrl.full %>
                            </a>
                        </td>
                        <td>
                            <a href="/<%= shortUrl.short %>" target="_blank" class="text-decoration-none text-primary">
                                <%= shortUrl.short %>
                            </a>
                        </td>
                        <td><span class="badge bg-info text-dark"><%= shortUrl.clicks %></span></td>
                        <td>
                            <% if (shortUrl.remainingTime > 0) { %>
                                <span class="remaining-time"><%= shortUrl.remainingTime %> min</span>
                            <% } else { %>
                                <span class="expired">Expired</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (shortUrl.qrCode) { %>
                                <img src="<%= shortUrl.qrCode %>" alt="QR Code" class="qr-code" title="Click to magnify">
                            <% } else { %>
                                <span class="text-muted">Not available</span>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Load particles.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', 'https://raw.githubusercontent.com/VincentGarreau/particles.js/master/particles.json', function() {
            console.log('particles.js loaded - callback');
        });
    </script>
</body>
</html>
